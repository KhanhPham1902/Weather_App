<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WeatherApp" parent="Theme.AppCompat.DayNight.NoActionBar">

        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="SlideAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
    </style>

    <!-- Dark mode -->
    <!-- Screen background on dark mode -->
    <style name="SCREEN">
        <item name="android:background">#000</item>
    </style>
    <!-- Texts color on dark mode-->
    <style name="TEXT">
        <item name="android:textColor">#FFF</item>
    </style>
    <!-- Button background on dark mode-->
    <style name="BUTTON">
        <item name="android:background">@color/lavender</item>
        <item name="android:textColor">#000</item>
    </style>
</resources>